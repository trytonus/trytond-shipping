<?xml version="1.0" encoding="UTF-8"?>
<form string="Generate Shipment Label" col="2">
    <label name="carrier"/>
    <field name="carrier" widget="selection"/>
    <label name="carrier_service"/>
    <field name="carrier_service" widget="selection"/>
    <label name="no_of_packages" />
    <field name="no_of_packages" />
    <label name="no_of_packages" string="If the number of packages is zero, a single new package will automatically be created for this shipment." colspan="2" states="{'invisible': Bool(Eval('no_of_packages'))}" xalign="0.0" />
    <label name="box_type" />
    <field name="box_type" widget="selection"/>
    <label name="override_weight" />
    <field name="override_weight" />
    <label name="override_weight" string="This weight will be equally distributed among all packages." colspan="2" xalign="0.0" />
    <newline />
    <separator name="shipping_instructions" colspan="4"/>
    <field name="shipping_instructions" colspan="4"/>
</form>
