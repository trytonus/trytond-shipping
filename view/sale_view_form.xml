<?xml version="1.0"?>
<data>
    <xpath expr="//notebook" position="inside">
        <page id="carrier" string="Carrier Details">
            <label name="weight"/>
            <field name="weight"/>
            <label name="weight_uom"/>
            <field name="weight_uom"/>
        </page>
    </xpath>
    <xpath expr="//field[@name='carrier']" position="after">
        <label name="carrier_service"/>
        <field name="carrier_service"/>
    </xpath>
    <xpath expr="//label[@name='invoice_state']" position="before">
        <button name="apply_shipping" string="Apply Shipping" colspan="4"/>
    </xpath>
</data>
